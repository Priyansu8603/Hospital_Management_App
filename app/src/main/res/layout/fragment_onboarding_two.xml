<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Fragment.OnboardingOne">

    <ImageView
        android:id="@+id/imageView2"
        android:src="@drawable/ellipse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Best Doctors"
        android:textSize="30sp"
        android:fontFamily="@font/poppinmedium"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintEnd_toEndOf="@id/imageView2"/>

    <TextView
        android:id="@+id/description2"
        android:textSize="15sp"
        android:fontFamily="@font/poppinmedium"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:padding="5dp"
        android:lineSpacingExtra="4dp"
        android:text="Choose Your Doctors:\n Empowering You to Take Control of Your Health with Convenient Appointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintStart_toStartOf="@id/title2"
        app:layout_constraintEnd_toEndOf="@id/title2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/GetStartedBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_generate"
        android:fontFamily="@font/poppinmedium"
        android:gravity="center"
        android:text="Get Started"
        android:elevation="15dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/skipBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/GetStartedBtn"
        app:layout_constraintEnd_toEndOf="@id/GetStartedBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinmedium"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:text="Skip"
        android:id="@+id/skipBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>